<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KetQuaActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả thi"
        android:textColor="#000000"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/textView_Diem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/25"
        android:textColor="#2196F3"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không đạt"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:padding="25dp"/>
    <Button
        android:id="@+id/button_thilai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/start_custom_button"
        android:text="Thi lại"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/start_custom_button"
        android:text="Trở về trang chủ"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:textSize="20sp"/>

</LinearLayout>